{
  "$schema": "https://zeabur.com/schema.json",
  "name": "morph-template",
  "services": [
    {
      "name": "api",
      "type": "nodejs",
      "path": "apps/api",
      "buildCommand": "pnpm install && pnpm build --filter=@repo/api",
      "startCommand": "node apps/api/dist/index.js",
      "port": 3000,
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "web",
      "type": "static",
      "path": "apps/web",
      "buildCommand": "pnpm install && pnpm build --filter=@repo/web",
      "outputDirectory": "apps/web/dist"
    }
  ]
}
